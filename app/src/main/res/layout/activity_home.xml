<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hetic.antoinegourtay.canieat.activity.HomeActivity"
    android:background="@color/happycow_splash_screen">

    <Button
        android:id="@+id/tofaqbutton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/faq"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/tomapsbutton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/Carte"
        tools:layout_editor_absoluteY="135dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/receipes"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tomapsbutton"
        android:id="@+id/button2" />

    <Button
        android:id="@+id/toaboutbutton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/apropos"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tofaqbutton" />

</android.support.constraint.ConstraintLayout>
