<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <Button
        android:id="@+id/tomapsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Carte"
        />

    <Button
        android:id="@+id/torecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/receipes" />

    <Button
        android:id="@+id/torandomrestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discover_restaurant"/>

    <Button
        android:id="@+id/tofaqbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/faq" />

    <Button
        android:id="@+id/toaboutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apropos"
         />

</LinearLayout>
